    <div class="container">

        <div class="main-body">
       
     <!-- Breadcrumb -->
              <nav aria-label="breadcrumb" class="main-breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item active" aria-current="page">User Profile</li>
                </ol>
              </nav>
              <!-- Breadcrumb -->
        
              <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                  <div class="card-user">
                    <div class="card-body">
                      <div class="d-flex flex-column align-items-center text-center">
                        <img src= "<%=@user_info.file_extension%>" alt="Admin" class="rounded-circle" width="150">
                        <div class="mt-3">
                          <h4 style="font-weight: bold;"><%= @user_info.first_name %>  <%= @user_info.last_name %></h4>
                          <p class="text-muted font-size-sm"><%= @user_info.email %></p>
                        </div>

                        <div class="card-user mt-3 card-social-width">
                            <ul class="list-group list-group-flush">
                             
                              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="text-secondary " >Check My Cart</h6>
                                <a  class="fas fa-shopping-cart user-anch-opt mb-0" href="/carts/cart_index"> Cart</a>
                              </li>
                              <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="text-secondary " >Check My Wishlist</h6>
                                <a  class="fas fa-heart mb-0 user-anch-opt" href="/carts/wishlist_index" > Wishlist</a>
                              </li>
                               <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h6 class="text-secondary " >Check My Delivery</h6>
                                <a  class="fas fa-truck mb-0 user-anch-opt" href="/orders/delivery_index" > Delivery</a>
                              </li>
                             <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <h5 class="text-secondary " >For any Queries</h5>
                                <a type="button" class="fas fa-question-circle mb-0 user-anch-opt" href="/orders/new_incident" > Help</a>
                              </li>
                            </ul>
                          </div>
                      </div>
                    </div>
                  </div>
                  
                </div>
                <div class="col-md-8">
                  <div class="card-user mb-3 card-left-height">
                    <div class="card-body">
                      <div class="row">
                        <div class="col-sm-3">
                          <h6  style="font-weight: bold;" class="mb-0">Full Name</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          <%= @user_info.first_name%> <%= @user_info.last_name%> 
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6  style="font-weight: bold;" class="mb-0">Email</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          <%= @user_info.email%>
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6  style="font-weight: bold;" class="mb-0">Phone</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                         <%= @user_info.phone_number%>
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6  style="font-weight: bold;" class="mb-0">Address</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                         <%= @user_info.city%> <%= @user_info.state%> <%= @user_info.country%>
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-12">
                          <a href="/users/edit_user/<%=@user_info.unique_id%>" class="index-anch btn-info btn">Edit</a>
                        </div>
                      </div>
                    </div>
                  </div>
              </div>
    
            </div>
        </div>
