<form action="/delivery/cancel_delivery" method="POST" data-controller="delivery-cancel">
  <input type="hidden" name="order_id" value="12345">
  <label for="reason">Reason for cancellation:</label>
  <select id="reason" name="reason" class="box select-btn" >
    <option value="" >Select a reason</option>
    <option value="Item no longer needed">Item no longer needed</option>
    <option value="Found a better deal">Found a better deal</option>
    <option value="Shipping time too long">Shipping time too long</option>
    <option value="Wrong item shipped">Wrong item shipped</option>
    <option value="Item arrived damaged">Item arrived damaged</option>
    <option value="Other">Other</option>
  </select>
  <button type="submit" style="margin-top: 32px;"  data-delivery-cancel-target= "cancellation" , data-action= "click->delivery-cancel#cancelation" >Cancel Order</button>
</form>



